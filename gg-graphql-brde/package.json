		"body-parser": "^1.18.2",
		"cors": "^2.8.4",
		"express": "^4.16.2",
		"graphql": "^0.11.7",
		"graphql-tools": "^2.6.1",
		"lodash": "^4.17.4",
		"node-fetch": "^1.7.3",
		"nodemon": "^1.12.1",
