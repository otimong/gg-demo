{
    "compilerOptions": {
        "module": "esnext",
        "outDir": "build",
        "target": "es2017",
        "jsx": "react",
        "allowJs": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "**/*.test.tsx",
        "components/FrontPageListings",
        "gg-graphql-brde"
    ]
}